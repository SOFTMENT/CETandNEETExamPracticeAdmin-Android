<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/main_color"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subcategory Name"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montbold"
            android:textSize="17sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/selectFile"
        android:textSize="13sp"
        android:text="Select XLSX FILE"
        android:fontFamily="@font/montsemibold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/select_xlsx_file_back"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadFile"
        android:backgroundTint="@color/main_color"
        android:textSize="13sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Upload On Server"
        android:fontFamily="@font/montsemibold"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/select_xlsx_file_back"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />




</LinearLayout>
