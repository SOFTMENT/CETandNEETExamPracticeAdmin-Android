<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Admin.AddFragment">

   <RelativeLayout
       android:id="@+id/toolBar"
       android:layout_width="match_parent"
       android:layout_height="55dp"
       android:background="@color/main_color"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:text="My Categories"
           android:layout_centerInParent="true"
           android:fontFamily="@font/montbold"
           android:textSize="17sp"
           android:textColor="@color/white"
           />

   </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar"
        android:id="@+id/recyclerview"

        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addCatBtn"
        android:src="@drawable/ic_round_add_circle_24"
        app:fabSize="normal"
        app:tint="@color/white"
        app:backgroundTint="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:contentDescription="TODO" />


    <TextView
        android:id="@+id/no_categories_available"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No categories available"
        android:fontFamily="@font/montmedium"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
